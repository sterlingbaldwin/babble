doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet' type="text/css" href='http://cdn.foundation5.zurb.com/foundation.css')
    script(src='https://code.jquery.com/jquery-2.2.0.js')
    script(src='/javascripts/foundation.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js')
    script(src='/javascripts/app.js')
    script.
      $(document).ready(function(){
        $(document).foundation();
      });

  body(ng-app="babble" ng-controller="BabbleControl" ng-init="init()")
    nav(class="top-bar" data-topbar role="navigation")
      ul(class="title-area")
        li(class="toggle-topbar menu-icon")
          a(href="JavaScript:void(0)") Menu
  
      ul
       section(class="top-bar-section")
        ul(class="left")
          li(class="active")
            a(href="JavaScript:void(0)") home
          li 
            a(href="JavaScript:void(0)" ng-click="register_modal_trigger()") Register

        ul(class="right")
          li 
            a(href="JavaScript:void(0)" ng-click="") SOmething
          
    
    block content
    
    div(ng-include="" src="'partials/register_user.html'")
    //
      div(id="register_modal" class="reveal-modal" data-reveal aria-labelledby="register_modal" aria-hidden="true" role="dialog")
        h2 Register
        label Email
          input(type="text" placeholder="email" id="reg-email-field")
        label Username
          input(type="text" placeholder="username" id="reg-username-field")
        label Password
          input(type="password" placeholder="password" id="reg-password-field")
        button(class="success round" ng-click="register()") register
        a(class="close-reveal-modal" aria-label="Close")&#215
    
